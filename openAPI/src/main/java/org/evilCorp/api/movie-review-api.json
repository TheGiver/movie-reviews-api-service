    "/publish/new-movie": {
      "post": {
        "operationId": "addAMovieToThePool",
        "summary": "Publish a new movie to our database to help us grow and provide support to a wider range of movies and/or series",
        "requestBody": {
          "description": "Expected format to add a new movie to the system",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/new_movie"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Movie registered in the system",
            "content": {
              "schema": {
                "$ref": ""
              }
            }
          },
          "400": {
            "description": "Invalid body request",
            "content": {
              "schema": {
                "$ref": ""
              }
            }
          }
        }
      }
    },
    "/publish/movie-review": {
      "post": {
        "operationId": "publishAMovieReview",
        "summary": "Add a review to a movie of choice. A review consists of either a comment a rating or both depending the user's choice",
        "requestBody": {
          "description": "",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/new_review"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Review added for the selected movie",
            "content": {
              "schema": {
                "$ref": ""
              }
            }
          },
          "400": {
            "description": "Invalid body request",
            "content": {
              "schema": {
                "$ref": "Invalid body request"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "new_movie": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "release_date": {
            "type": "string",
            "format": "date"
          }
        }
      },
      "new_review": {
        "type": "object",
        "properties": {
          "movie": {
            "type": "string"
          },
          "rating": {
            "type": "integer",
            "minimum": 0,
            "maximum": 10
          },
          "comments": {
            "type": "string"
          }
        }
      }
    }
  }
}
